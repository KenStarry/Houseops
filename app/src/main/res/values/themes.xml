<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HouseOps" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent_blue_bright</item>
        <item name="colorPrimaryVariant">@color/accent_blue_dull</item>
        <item name="colorOnPrimary">@color/bg_cream</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_blue_bright</item>
        <item name="colorSecondaryVariant">@color/accent_blue_bright</item>
        <item name="colorOnSecondary">@color/bg_white</item>

        <!--Text Colors Light Mode-->
        <item name="textBlack900">@color/text_black_900</item>
        <item name="textBlack700">@color/text_black_700</item>
        <item name="textBlack500">@color/text_black_500</item>
        <item name="textBlack300">@color/text_black_300</item>
        <item name="textBlack100">@color/text_black_100</item>
        <item name="textBlack100Trans">@color/text_black_100_trans</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <item name="android:navigationBarColor">?attr/colorOnPrimary</item>
        <item name="bottomSheetDialogTheme">@style/MyBottomSheetDialogTheme</item>

    </style>

    <!--Bottom sheet dialog theme-->
    <style name="MyBottomSheetDialogTheme" parent="ThemeOverlay.Material3.BottomSheetDialog">

        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustPan</item>

    </style>

    <style name="AppModalStyle" parent="Widget.Material3.BottomSheet.Modal">
        <item name="background">@drawable/rounded_dialog</item>
    </style>


</resources>