<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnPrimary"
    tools:context=".activities.LoginActivity">

    <!--The Real Estate Image at the back-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <!--Watermark image-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/real_estate_1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/accent_blue_dull_trans">

            <!--Logo-->
            <ImageView
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:layout_marginTop="8dp"
                android:src="@drawable/houseops_logo_white_new" />

        </RelativeLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/top_rounded_view"
        android:layout_marginTop="150dp"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_in"
            android:textSize="22sp"
            android:includeFontPadding="false"
            android:fontFamily="@font/poppins_bold"
            android:textColor="?attr/textBlack700"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <!--Email Login-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textSize="14sp"
                android:includeFontPadding="false"
                android:fontFamily="@font/poppins_bold"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                app:hintEnabled="false"
                android:padding="0dp"
                app:passwordToggleEnabled="false"
                app:boxStrokeWidth="0dp"
                app:passwordToggleTint="?attr/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/poppins_regular"
                    android:lines="1"
                    android:hint="@string/email_hint"
                    android:textSize="14sp"
                    android:textColor="?attr/textBlack700"
                    android:background="@drawable/rounded_edit_text"
                    android:id="@+id/emailSignIn"
                    android:layout_marginTop="16dp"
                    android:padding="0dp"/>

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

        <!--Password Login-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:textSize="14sp"
                android:includeFontPadding="false"
                android:fontFamily="@font/poppins_bold"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"/>
            
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                android:padding="0dp"
                app:boxStrokeWidth="0dp"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="?attr/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:fontFamily="@font/poppins_regular"
                    android:lines="1"
                    android:hint="@string/password_hint"
                    android:textSize="14sp"
                    android:textColor="?attr/textBlack700"
                    android:background="@drawable/rounded_edit_text"
                    android:id="@+id/passwordSignIn"
                    android:layout_marginTop="16dp"
                    android:padding="0dp"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!--Forgot password text-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forgotPasswordText"
            android:text="@string/forgot_password_text"
            android:textSize="12sp"
            android:includeFontPadding="false"
            android:fontFamily="@font/poppins_regular"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold"
            android:layout_marginTop="32dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/sign_in_button"
                android:id="@+id/signInButton"
                android:elevation="10dp"
                android:text="Sign In"
                android:visibility="visible"
                android:fontFamily="@font/poppins_regular"
                android:textAllCaps="false" />

            <ProgressBar
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/progressBar"
                android:layout_gravity="center"
                android:visibility="gone"/>

        </FrameLayout>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="OR"
            android:textSize="14sp"
            android:textColor="?attr/textBlack100"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <!--Create Account-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/create_account_text"
                android:text="Don't Have an account? "
                android:textSize="12sp"
                android:includeFontPadding="false"
                android:fontFamily="@font/poppins_regular"
                android:textColor="?attr/textBlack100"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sign_up_text"
                android:text="Sign Up"
                android:textSize="14sp"
                android:includeFontPadding="false"
                android:fontFamily="@font/poppins_regular"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>