<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/rounded_dialog"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <View
                android:layout_width="16dp"
                android:layout_height="2dp"
                android:background="?attr/textBlack100"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add a House"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="?attr/textBlack700"
                android:fontFamily="@font/poppins_regular"
                android:includeFontPadding="false"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"/>

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/add_house_image"
                android:layout_gravity="center"
                app:riv_corner_radius="16dp"
                android:layout_marginTop="32dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image_regular"
                app:tint="?attr/textBlack300"/>

            <!--House Number-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:hintEnabled="false"
                android:padding="0dp"
                app:passwordToggleEnabled="false"
                app:boxStrokeWidth="0dp"
                android:layout_marginTop="16dp"
                app:passwordToggleTint="?attr/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_regular"
                    android:lines="1"
                    android:hint="House Number"
                    android:textSize="14sp"
                    android:textColor="?attr/textBlack700"
                    android:background="@drawable/rounded_edit_text_primary"
                    android:id="@+id/houseNumber"
                    android:padding="0dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!--Status, occupied or vacant-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="?attr/textBlack300"
                    android:layout_marginEnd="16dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@drawable/rounded_corners"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="45dp"
                        android:id="@+id/vacantToggle"
                        android:background="@drawable/rounded_corners_active">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/poppins_regular"
                            android:includeFontPadding="false"
                            android:text="Vacant"
                            android:textColor="?attr/textBlack700"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="45dp"
                        android:id="@+id/occupiedToggle"
                        android:background="@drawable/rounded_corners">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/poppins_regular"
                            android:includeFontPadding="false"
                            android:text="Occupied"
                            android:textColor="?attr/textBlack700"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <!--Type of house: one bedroom, 2 bedroom e.t.c-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="?attr/textBlack700"
                android:fontFamily="@font/poppins_regular"
                android:includeFontPadding="false"
                android:layout_marginTop="16dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="horizontal">

                    <!--Single-->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/house_category_single"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/rounded_edit_text"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/poppins_regular"
                            android:includeFontPadding="false"
                            android:text="Single"
                            android:textColor="?attr/textBlack700"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <!--Bedsitter-->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/house_category_bedsitter"
                        android:background="@drawable/rounded_edit_text"
                        android:layout_marginEnd="8dp"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/poppins_regular"
                            android:includeFontPadding="false"
                            android:text="Bedsitter"
                            android:textColor="?attr/textBlack700"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <!--One Bedroom-->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/house_category_one_bedroom"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/rounded_edit_text"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/poppins_regular"
                            android:includeFontPadding="false"
                            android:text="One Bedroom"
                            android:textColor="?attr/textBlack700"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <!--Two Bedroom-->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/house_category_two_bedroom"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/rounded_edit_text"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/poppins_regular"
                            android:includeFontPadding="false"
                            android:text="Two Bedroom"
                            android:textColor="?attr/textBlack700"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <!--Three Bedroom-->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/house_category_three_bedroom"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/rounded_edit_text"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/poppins_regular"
                            android:includeFontPadding="false"
                            android:text="Three Bedroom"
                            android:textColor="?attr/textBlack700"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <!--Mansion-->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/house_category_mansion"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/rounded_edit_text"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/poppins_regular"
                            android:includeFontPadding="false"
                            android:text="Mansion"
                            android:textColor="?attr/textBlack700"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <!--Other-->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/house_category_other"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/rounded_edit_text"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/poppins_regular"
                            android:includeFontPadding="false"
                            android:text="Other"
                            android:textColor="?attr/textBlack700"
                            android:textSize="14sp" />
                    </RelativeLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <!--Description of the house-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="?attr/textBlack700"
                android:fontFamily="@font/poppins_regular"
                android:includeFontPadding="false"
                android:layout_marginTop="32dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/house_description"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:hint="Tell me more..."
                android:padding="16dp"
                android:textColor="?attr/textBlack700"
                android:textStyle="normal"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular"
                android:includeFontPadding="false"
                android:background="@drawable/rounded_edit_text"/>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/accent_blue_bright"
                android:id="@+id/houseAddBtn"
                android:layout_gravity="end"
                android:text="Add"
                android:textStyle="bold"
                android:textColor="@color/text_white_900"
                android:layout_marginTop="32dp"
                android:theme="@style/PrimaryButton"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>