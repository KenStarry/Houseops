            <!--Pricing per month-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="?attr/textBlack700"
                android:includeFontPadding="false"
                android:layout_marginTop="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <!--Ksh Text-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ksh"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="?attr/textBlack700"
                    android:includeFontPadding="false"/>

                <!--House Price-->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="2"
                    android:layout_marginStart="16dp"
                    app:hintEnabled="false"
                    android:padding="0dp"
                    app:passwordToggleEnabled="false"
                    app:boxStrokeWidth="0dp"
                    app:passwordToggleTint="?attr/colorPrimary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="number"
                        android:fontFamily="@font/poppins_regular"
                        android:lines="1"
                        android:hint="Price"
                        android:textSize="14sp"
                        android:textColor="?attr/textBlack700"
                        android:background="@drawable/rounded_edit_text"
                        android:id="@+id/housePrice"
                        android:padding="0dp"/>

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/house_card_price_per_month_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:includeFontPadding="false"
                    android:text="/mo"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp"
                    android:textColor="?attr/textBlack100"
                    android:textSize="14sp" />

            </LinearLayout>

            <!--Description of the house-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="?attr/textBlack700"
                android:includeFontPadding="false"
                android:layout_marginTop="32dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/house_description"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:hint="Tell me more..."
                android:padding="16dp"
                android:textColor="?attr/textBlack700"
                android:textStyle="normal"
                android:textSize="14sp"
                android:includeFontPadding="false"
                android:background="@drawable/rounded_edit_text"/>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/accent_blue_bright"
                android:id="@+id/houseAddBtn"
                android:layout_gravity="end"
                android:text="Add"
                android:textStyle="bold"
                android:textColor="@color/text_white_900"
                android:layout_marginTop="32dp"
                android:theme="@style/PrimaryButton"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>