<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/rounded_dialog"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <View
                android:layout_width="16dp"
                android:layout_height="2dp"
                android:background="?attr/textBlack100"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add a House"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="?attr/textBlack700"
                android:includeFontPadding="false"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:id="@+id/add_house_recycler"/>

                <!--Add House Button-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/add_house_image"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/accent_blue_bright_trans">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_add_24"
                            android:layout_gravity="center"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add a House"
                        android:textSize="12sp"
                        android:textColor="?attr/textBlack700"
                        android:includeFontPadding="false"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>

            </LinearLayout>

            <!--Type of house: one bedroom, 2 bedroom e.t.c-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="?attr/textBlack700"
                android:includeFontPadding="false"
                android:layout_marginTop="32dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="horizontal">

                    <!--Single-->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/house_category_single"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/rounded_edit_text"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:includeFontPadding="false"
                            android:text="Single"
                            android:textColor="?attr/textBlack700"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <!--Bedsitter-->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/house_category_bedsitter"
                        android:background="@drawable/rounded_edit_text"
                        android:layout_marginEnd="8dp"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:includeFontPadding="false"
                            android:text="Bedsitter"
                            android:textColor="?attr/textBlack700"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <!--One Bedroom-->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/house_category_one_bedroom"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/rounded_edit_text"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:includeFontPadding="false"
                            android:text="One Bedroom"
                            android:textColor="?attr/textBlack700"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <!--Two Bedroom-->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/house_category_two_bedroom"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/rounded_edit_text"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:includeFontPadding="false"
                            android:text="Two Bedroom"
                            android:textColor="?attr/textBlack700"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <!--Three Bedroom-->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/house_category_three_bedroom"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/rounded_edit_text"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:includeFontPadding="false"
                            android:text="Three Bedroom"
                            android:textColor="?attr/textBlack700"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <!--Mansion-->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/house_category_mansion"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/rounded_edit_text"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:includeFontPadding="false"
                            android:text="Mansion"
                            android:textColor="?attr/textBlack700"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <!--Other-->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/house_category_other"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/rounded_edit_text"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:includeFontPadding="false"
                            android:text="Other"
                            android:textColor="?attr/textBlack700"
                            android:textSize="14sp" />
                    </RelativeLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <!--House Number-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:hintEnabled="false"
                android:padding="0dp"
                app:passwordToggleEnabled="false"
                app:boxStrokeWidth="0dp"
                android:layout_marginTop="32dp"
                app:passwordToggleTint="?attr/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:gravity="center"
                    android:lines="1"
                    android:hint="Rooms Available"
                    android:textSize="16sp"
                    android:textColor="?attr/textBlack700"
                    android:background="@drawable/rounded_edit_text"
                    android:id="@+id/houseRoomsAvailable"
                    android:padding="0dp"/>

            </com.google.android.material.textfield.TextInputLayout>

