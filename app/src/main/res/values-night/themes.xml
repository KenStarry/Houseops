<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HouseOps" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent_blue_bright</item>
        <item name="colorPrimaryVariant">@color/accent_blue_dull</item>
        <item name="colorOnPrimary">@color/bg_dark_light</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_blue_bright</item>
        <item name="colorSecondaryVariant">@color/accent_blue_bright</item>
        <item name="colorOnSecondary">@color/bg_dark</item>

        <!--Text Colors Dark Mode-->
        <item name="textBlack900">@color/text_white_900</item>
        <item name="textBlack700">@color/text_white_700</item>
        <item name="textBlack500">@color/text_white_500</item>
        <item name="textBlack300">@color/text_white_300</item>
        <item name="textBlack100">@color/text_white_100</item>
        <item name="textBlack100Trans">@color/text_white_100_trans</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <item name="android:navigationBarColor">?attr/colorOnPrimary</item>
        <item name="bottomSheetDialogTheme">@style/MyBottomSheetDialogTheme</item>

    </style>

    <!--Bottom sheet dialog theme-->
    <style name="MyBottomSheetDialogTheme" parent="ThemeOverlay.Material3.BottomSheetDialog">

        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>

    </style>

    <style name="AppModalStyle" parent="Widget.Material3.BottomSheet.Modal">
        <item name="background">@drawable/rounded_dialog</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <!--Item Indicator for bottom navigation menu-->
    <style name="Widget.Material3.BottomNavigationView.ActiveIndicator" parent="">
        <item name="android:width">@dimen/m3_bottom_nav_item_active_indicator_width</item>
        <item name="android:height">@dimen/m3_bottom_nav_item_active_indicator_height</item>
        <item name="marginHorizontal">@dimen/m3_bottom_nav_item_active_indicator_margin_horizontal</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.NavigationBarView.ActiveIndicator</item>
        <item name="android:color">?attr/colorSecondaryContainer</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">?attr/colorPrimary</item>
    </style>

    <!--Default appearance for buttons-->
    <style name="PrimaryButton" parent="Theme.AppCompat">
        <item name="backgroundTint">@color/accent_blue_bright</item>
        <item name="colorButtonNormal">?attr/colorOnSecondary</item>
        <item name="colorControlHighlight">@color/accent_blue_bright</item>
    </style>

</resources>